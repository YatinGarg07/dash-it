<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/mukta_semibold"
            android:text="Create Account"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:textSize="13sp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/roboto"
            android:text="Connect with your friends today"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/subtitle"
            android:layout_marginTop="66dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="26dp"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/mukta_semibold"

            />

        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:hint=" Enter your name"
            android:paddingLeft="9dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_edittext"
            app:layout_constraintTop_toBottomOf="@id/name_title" />

        <TextView
            android:id="@+id/email_title"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/name_edit_text"
            android:layout_marginTop="66dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="26dp"
            android:text="Email Address"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/mukta_semibold"

            />

        <EditText
            android:id="@+id/email_edit_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:hint=" Enter your email"
            android:paddingLeft="9dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_edittext"
            app:layout_constraintTop_toBottomOf="@id/email_title" />


        <TextView
            android:id="@+id/passwd_title"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/email_title"
            android:layout_marginTop="95dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="26dp"
            android:text="Password"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/mukta_semibold"

            />

        <EditText
            android:id="@+id/passwd_edit_text"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:hint=" Enter your password"
            android:padding="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rounded_edittext"
            app:layout_constraintTop_toBottomOf="@id/passwd_title" />

        <CheckBox
            android:id="@+id/chkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:paddingLeft="9dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/passwd_edit_text"
            android:layout_marginTop="24dp"
            />

        <TextView
            android:id="@+id/agreechkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="I agree to the terms and conditions"
            android:layout_marginTop="29dp"
            app:layout_constraintLeft_toRightOf="@id/chkbox"
            app:layout_constraintTop_toBottomOf="@+id/passwd_edit_text" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signup_btn"
            style="@style/Widget.Material3.FloatingActionButton.Large.Primary"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginLeft="26dp"
            android:backgroundTint="#00726D"
            android:text="Sign Up"
            android:textColor="#ffffff"
            android:textSize="17dp"
            android:layout_marginTop="59dp"
            app:layout_constraintTop_toBottomOf="@id/agreechkbox"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="470dp" />

        <View
            android:id="@+id/thickline"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="42dp"
            android:layout_marginStart="19dp"
            android:layout_marginEnd="23dp"
            android:background="@drawable/borderlines"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_btn" />

        <TextView
            android:id="@+id/orSignup_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginStart="148dp"
            android:background="#ffffff"
            android:fontFamily="@font/mukta_bold"
            android:text="Or Sign Up With"
            android:textAlignment="center"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/signup_btn" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/facebook_signup_btn"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text=" Facebook"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/orSignup_textview"
            app:iconTint="#0E71F1"
            android:fontFamily="@font/mukta_semibold"
            android:foreground="?attr/selectableItemBackground"
            app:icon="@drawable/ic_facebook_square_brands"
            app:strokeColor="#D9DCE8"
            app:cornerRadius="7dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center|start"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="19dp"
            android:layout_marginTop="30dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/google_signup_btn"
            android:layout_width="179dp"
            android:layout_height="65dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:text=" Google"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/orSignup_textview"
            android:fontFamily="@font/mukta_semibold"
            app:iconTint="@android:color/transparent"
            app:iconTintMode="add"
            android:foreground="?attr/selectableItemBackground"
            app:icon="@drawable/ic_google"
            app:strokeColor="#D9DCE8"
            app:cornerRadius="7dp"
            app:layout_constraintLeft_toRightOf="@id/facebook_signup_btn"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/haveacc_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            app:layout_constraintTop_toBottomOf="@id/facebook_signup_btn"
            android:layout_marginTop="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="94dp"
            />

        <TextView
            android:id="@+id/goto_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="58dp"
            android:fontFamily="@font/mukta_bold"
            android:text="Login"
            android:textColor="#137D78"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@id/haveacc_textview"
            app:layout_constraintTop_toBottomOf="@id/facebook_signup_btn"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>