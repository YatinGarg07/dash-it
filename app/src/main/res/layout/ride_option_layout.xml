<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:id="@+id/ride_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ride_image"
                android:layout_width="85dp"
                android:layout_height="100dp"
                android:layout_weight="5"
                android:src="@drawable/uberx" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"

                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/ride_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto"
                    android:text="Uber X"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ride_travel_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:text="2 hours 39 mins Travel Time"
                    android:textStyle="normal" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/ride_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:paddingTop="10dp"
                android:gravity="center"
                android:textSize="19sp"
                android:fontFamily="@font/mukta_semibold"
                android:text="â‚¹99"
                android:textColor="@color/black"
                />


        </LinearLayout>

</layout>